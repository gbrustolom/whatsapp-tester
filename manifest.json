{
    "manifest_version": 3,
    "name": "WhatsApp Tester",
    "version": "1.0",
    "minimum_chrome_version": "102",
    "omnibox": {
        "keyword": "api"
    },
    "content_scripts": [
        {
            "matches": [
                "https://web.whatsapp.com/*"
            ],
            "js": [
                "lib/media.js",
                "lib/engine.js",
                "lib/interface.js",
                "main.js"
            ],
            "css": [ "style.css" ]
        }
    ],
    "icons": {
        "16": "images/icon16.png",
        "24": "images/icon24.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}